@model List<SimpleAppJc.Domain.Car>
@{
    ViewBag.Title = "Display a list of car";
}

<div class="jumbotron">

</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>View</th>
                        <th>Mark</th>
                        <th>Model</th>
                        <th>Year</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink("Details","Details","Car",new {id=item.CarId},null) </td>
                            <td>@item.Make</td>
                            <td>@item.Model</td>
                            <td>@item.Year</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>


